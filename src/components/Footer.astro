---
import contact from '../../content/kontakt.json';
import labels from '../../content/labels.json';

interface Props {
  lang: 'de' | 'en';
}

const { lang } = Astro.props;
const t = labels[lang];
const currentYear = new Date().getFullYear();
---

<footer class="border-t border-slate-200 dark:border-slate-800 mt-auto">
  <div class="max-w-6xl mx-auto px-6 py-8">
    <div class="flex flex-col md:flex-row items-center justify-between gap-4">
      <!-- Name and Title -->
      <div class="text-center md:text-left">
        <p class="font-medium text-slate-900 dark:text-white">{contact.name}</p>
        <p class="text-sm text-slate-500 dark:text-slate-400">
          {contact.university[lang]}
        </p>
      </div>

      <!-- Copyright -->
      <p class="text-sm text-slate-500 dark:text-slate-400">
        &copy; {currentYear} {t.footer.copyright}
      </p>
    </div>
  </div>
</footer>
