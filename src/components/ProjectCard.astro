---
import labels from '../content/labels.json';
import StatusBadge from './StatusBadge.astro';
import { url } from '../utils/paths';

interface Props {
  project: {
    id: string;
    data: {
      title: string;
      years?: string;
      lead?: string;
      team?: string;
      funding?: string;
      status?: string;
    };
  };
  lang: 'de' | 'en';
  variant?: 'default' | 'compact';
}

const { project, lang, variant = 'default' } = Astro.props;
const t = labels[lang];
const projectUrl = url(`/${lang}/forschung/projekte/${project.id.replace(`${lang}/`, '')}`);
---

<a href={projectUrl} class="block group">
  <div class:list={[
    "bg-white dark:bg-slate-800/80 border border-slate-200 dark:border-slate-700 rounded-lg",
    "hover:shadow-md hover:border-blue-200 dark:hover:border-blue-600 transition-all duration-200",
    variant === 'compact' ? 'p-4' : 'p-5'
  ]}>
    <!-- Header: Title + Status/Years -->
    <div class="flex items-start justify-between gap-4 mb-3">
      <h4 class="font-medium text-slate-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
        {project.data.title}
      </h4>
      <div class="flex items-center gap-2 flex-shrink-0">
        {project.data.status && <StatusBadge status={project.data.status} variant="compact" />}
        {project.data.years && <span class="text-xs px-2 py-1 rounded bg-slate-100 dark:bg-slate-800">{project.data.years}</span>}
      </div>
    </div>

    <!-- Meta info grid -->
    <div class="grid gap-2 text-sm">
      {project.data.lead && (
        <div class="flex items-start gap-2">
          <svg class="w-4 h-4 text-slate-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
          <span class="text-slate-600 dark:text-slate-400">{project.data.lead}</span>
        </div>
      )}

      {project.data.team && (
        <div class="flex items-start gap-2">
          <svg class="w-4 h-4 text-slate-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
          <span class="text-slate-600 dark:text-slate-400">{project.data.team}</span>
        </div>
      )}

      {project.data.funding && (
        <div class="flex items-start gap-2">
          <svg class="w-4 h-4 text-slate-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
          </svg>
          <span class="text-slate-600 dark:text-slate-400">{project.data.funding}</span>
        </div>
      )}
    </div>
  </div>
</a>
