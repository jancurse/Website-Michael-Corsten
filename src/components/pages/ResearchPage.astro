---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import labels from '../../content/labels.json';

interface Props {
  lang: 'de' | 'en';
}

const { lang } = Astro.props;
const t = labels[lang];
const allFocusAreas = await getCollection('forschungsschwerpunkte');
const allProjects = await getCollection('forschungsprojekte');
const focusAreas = allFocusAreas.filter(f => f.id.startsWith(`${lang}/`));
const projects = allProjects.filter(p => p.id.startsWith(`${lang}/`));
---

<BaseLayout title={`${t.nav.research} - Prof. Dr. Michael Corsten`} lang={lang}>
  <div class="page-container">
    <!-- Page Header -->
    <div class="mb-12">
      <h1 class="section-header">{t.nav.research}</h1>
      <p class="text-lg text-slate-600 dark:text-slate-400 max-w-3xl">
        {t.research.description}
      </p>
    </div>

    <!-- Research Focus Areas -->
    <section class="mb-16">
      <h2 class="text-2xl font-semibold text-slate-900 dark:text-white mb-6">{t.sections.researchFocus}</h2>
      <div class="space-y-4">
        {focusAreas.map((area) => (
          <a href={`/${lang}/forschung/schwerpunkte/${area.id.replace(`${lang}/`, '')}`} class="card card-hover block group">
            <div class="flex flex-col gap-2">
              <h3 class="font-medium text-slate-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                {area.data.title}
              </h3>
              {area.data.lead && (
                <p class="text-sm text-slate-600 dark:text-slate-400">
                  <span class="font-medium">{t.labels.responsible}:</span> {area.data.lead}
                </p>
              )}
              {area.body && (
                <p class="text-sm text-slate-600 dark:text-slate-400 line-clamp-2">
                  {area.body.substring(0, 200)}...
                </p>
              )}
            </div>
          </a>
        ))}
      </div>
    </section>

    <!-- Research Projects -->
    <section>
      <h2 class="text-2xl font-semibold text-slate-900 dark:text-white mb-6">{t.sections.researchProjects}</h2>
      <div class="space-y-4">
        {projects.map((project) => (
          <a href={`/${lang}/forschung/projekte/${project.id.replace(`${lang}/`, '')}`} class="card card-hover block group">
            <div class="flex flex-col gap-2">
              <div class="flex items-start justify-between gap-4">
                <h3 class="font-medium text-slate-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                  {project.data.title}
                </h3>
                {project.data.years && (
                  <span class="flex-shrink-0 text-sm text-slate-500 dark:text-slate-400 bg-slate-100 dark:bg-slate-700 px-2 py-1 rounded">
                    {project.data.years}
                  </span>
                )}
              </div>
              {project.data.lead && (
                <p class="text-sm text-slate-600 dark:text-slate-400">
                  <span class="font-medium">{t.labels.projectLead}:</span> {project.data.lead}
                </p>
              )}
              {project.body && (
                <p class="text-sm text-slate-600 dark:text-slate-400 line-clamp-2">
                  {project.body.substring(0, 200)}...
                </p>
              )}
            </div>
          </a>
        ))}
      </div>
    </section>
  </div>
</BaseLayout>
