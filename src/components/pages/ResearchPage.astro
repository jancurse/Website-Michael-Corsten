---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import labels from '../../content/labels.json';
import ProjectCard from '../ProjectCard.astro';
import StatusBadge from '../StatusBadge.astro';
import { url } from '../../utils/paths';

interface Props {
  lang: 'de' | 'en';
}

const { lang } = Astro.props;
const t = labels[lang];
const allFocusAreas = await getCollection('forschungsschwerpunkte');
const allProjects = await getCollection('forschungsprojekte');

const focusAreas = allFocusAreas
  .filter(f => f.id.startsWith(`${lang}/`))
  .sort((a, b) => (a.data.order ?? Infinity) - (b.data.order ?? Infinity) || a.data.title.localeCompare(b.data.title));

const projects = allProjects
  .filter(p => p.id.startsWith(`${lang}/`))
  .sort((a, b) => (a.data.order ?? Infinity) - (b.data.order ?? Infinity) || a.data.title.localeCompare(b.data.title));

// Group projects by focus area
const projectsByFocusArea = new Map<string, typeof projects>();
const projectsWithoutFocusArea: typeof projects = [];

projects.forEach(project => {
  const focusAreaId = project.data.focus_area;
  if (focusAreaId) {
    if (!projectsByFocusArea.has(focusAreaId)) {
      projectsByFocusArea.set(focusAreaId, []);
    }
    projectsByFocusArea.get(focusAreaId)!.push(project);
  } else {
    projectsWithoutFocusArea.push(project);
  }
});

// Helper to get focus area ID from full path (strip lang prefix and .md extension)
const getFocusAreaId = (area: typeof focusAreas[0]) => area.id.replace(`${lang}/`, '').replace(/\.md$/, '');
---

<BaseLayout title={`${t.nav.research} - Prof. Dr. Michael Corsten`} lang={lang}>
  <div class="page-container">
    <!-- Page Header -->
    <div class="mb-12">
      <h1 class="section-header">{t.nav.research}</h1>
      <p class="text-lg text-slate-600 dark:text-slate-400 max-w-3xl">
        {t.research.description}
      </p>
    </div>

    <!-- Research Focus Areas with Projects -->
    <section class="mb-16">
      <h2 class="text-2xl font-semibold text-slate-900 dark:text-white mb-8">{t.sections.researchFocus}</h2>

      <div class="space-y-4" id="accordion-container">
        {focusAreas.map((area, index) => {
          const areaId = getFocusAreaId(area);
          const linkedProjects = projectsByFocusArea.get(areaId) || [];
          const uniqueId = `accordion-${index}`;

          return (
            <div class="accordion-item">
              <!-- Accordion Header -->
              <button
                data-accordion-trigger={uniqueId}
                class="accordion-trigger w-full bg-gradient-to-r from-slate-50 to-white dark:from-slate-800 dark:to-slate-800/50 border border-slate-200 dark:border-slate-700 rounded-xl p-6 hover:shadow-md hover:border-blue-300 dark:hover:border-blue-600 transition-all duration-300 text-left"
              >
                <div class="flex items-start justify-between gap-4">
                  <div class="flex-1">
                    <div class="flex items-center gap-3 mb-3">
                      <div class="w-2 h-2 rounded-full bg-blue-500"></div>
                      <a
                        href={url(`/${lang}/forschung/schwerpunkte/${area.id.replace(`${lang}/`, '')}`)}
                        class="text-xl font-semibold text-slate-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
                      >
                        {area.data.title}
                      </a>
                      {area.data.status && <StatusBadge status={area.data.status} variant="compact" />}
                    </div>

                    <div class="grid gap-2 text-sm mt-2">
                      {area.data.lead && (
                        <div class="flex items-start gap-2">
                          <svg class="w-4 h-4 text-slate-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                          </svg>
                          <span class="text-slate-600 dark:text-slate-400">{area.data.lead}</span>
                        </div>
                      )}
                      {area.data.team && (
                        <div class="flex items-start gap-2">
                          <svg class="w-4 h-4 text-slate-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                          </svg>
                          <span class="text-slate-600 dark:text-slate-400">{area.data.team}</span>
                        </div>
                      )}
                      {area.data.subtopics && area.data.subtopics.length > 0 && (
                        <div class="flex items-start gap-2">
                          <svg class="w-4 h-4 text-slate-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                          </svg>
                          <div class="text-slate-600 dark:text-slate-400">
                            {area.data.subtopics.map((topic: string, i: number) => (
                              <span>{topic}{i < area.data.subtopics!.length - 1 ? ', ' : ''}</span>
                            ))}
                          </div>
                        </div>
                      )}
                    </div>
                  </div>

                  <div class="flex-shrink-0">
                    <svg
                      data-accordion-icon={uniqueId}
                      class="accordion-icon w-5 h-5 text-slate-400 transition-transform duration-300"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                    </svg>
                  </div>
                </div>
              </button>

              <!-- Accordion Content (Linked Projects) -->
              {linkedProjects.length > 0 && (
                <div
                  data-accordion-content={uniqueId}
                  class="accordion-content hidden ml-6 mt-2 mb-2 space-y-3 relative"
                >
                  <!-- Vertical connector line -->
                  <div class="absolute left-0 top-0 bottom-4 w-px bg-gradient-to-b from-blue-300 to-transparent dark:from-blue-600"></div>

                  {linkedProjects.map((project) => (
                    <div class="ml-6 relative">
                      <!-- Horizontal connector -->
                      <div class="absolute -left-6 top-1/2 w-6 h-px bg-blue-200 dark:bg-blue-700"></div>
                      <div class="absolute -left-6 top-1/2 -translate-y-1/2 w-2 h-2 rounded-full bg-blue-400 dark:bg-blue-500 border-2 border-white dark:border-slate-800"></div>

                      <ProjectCard project={project} lang={lang} variant="compact" />
                    </div>
                  ))}
                </div>
              )}
            </div>
          );
        })}
      </div>
    </section>

    <!-- Other Projects (without focus area) -->
    {projectsWithoutFocusArea.length > 0 && (
      <section>
        <h2 class="text-2xl font-semibold text-slate-900 dark:text-white mb-6">{t.sections.otherProjects}</h2>
        <div class="grid gap-4 sm:grid-cols-2">
          {projectsWithoutFocusArea.map((project) => (
            <ProjectCard project={project} lang={lang} />
          ))}
        </div>
      </section>
    )}
  </div>
</BaseLayout>

<script>
  // Accordion functionality
  document.addEventListener('astro:page-load', () => {
    initAccordion();
  });

  // Also run on initial page load
  initAccordion();

  function initAccordion() {
    const triggers = document.querySelectorAll('[data-accordion-trigger]');

    triggers.forEach(trigger => {
      trigger.addEventListener('click', (e) => {
        // Don't trigger if clicking the detail link
        if ((e.target as HTMLElement).closest('a')) return;

        const id = trigger.getAttribute('data-accordion-trigger');
        if (!id) return;

        const content = document.querySelector(`[data-accordion-content="${id}"]`);
        const icon = document.querySelector(`[data-accordion-icon="${id}"]`);

        if (content && icon) {
          const isHidden = content.classList.contains('hidden');

          if (isHidden) {
            // Open
            content.classList.remove('hidden');
            icon.classList.add('rotate-180');
          } else {
            // Close
            content.classList.add('hidden');
            icon.classList.remove('rotate-180');
          }
        }
      });
    });
  }
</script>
