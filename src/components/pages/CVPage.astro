---
import BaseLayout from '../../layouts/BaseLayout.astro';
import cv from '../../../content/lebenslauf.json';
import labels from '../../../content/labels.json';

interface Props {
  lang: 'de' | 'en';
}

const { lang } = Astro.props;
const t = labels[lang];
---

<BaseLayout title={`${t.nav.cv} - Prof. Dr. Michael Corsten`} lang={lang}>
  <div class="page-container">
    <!-- Page Header -->
    <div class="mb-12">
      <h1 class="section-header">{t.nav.cv}</h1>
    </div>

    <div class="grid lg:grid-cols-2 gap-12">
      <!-- Education -->
      <section>
        <h2 class="text-2xl font-semibold text-slate-900 dark:text-white mb-6 flex items-center gap-3">
          <span class="w-10 h-10 rounded-xl bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center">
            <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9 5-9 5 9 5z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
            </svg>
          </span>
          {t.sections.education}
        </h2>
        <div class="space-y-4">
          {cv.education.map((item) => (
            <div class="relative pl-6 pb-6 border-l-2 border-slate-200 dark:border-slate-700 last:pb-0">
              <div class="absolute left-0 top-1 w-4 h-4 -translate-x-[9px] rounded-full bg-blue-500 ring-4 ring-white dark:ring-slate-900"></div>
              <div class="flex flex-col sm:flex-row sm:items-baseline sm:gap-3 mb-2">
                <span class="text-sm font-semibold text-blue-600 dark:text-blue-400">{item.years}</span>
                <span class="font-medium text-slate-900 dark:text-white">{item.type[lang]}</span>
              </div>
              <p class="text-slate-600 dark:text-slate-400">{item.description[lang]}</p>
            </div>
          ))}
        </div>
      </section>

      <!-- Career -->
      <section>
        <h2 class="text-2xl font-semibold text-slate-900 dark:text-white mb-6 flex items-center gap-3">
          <span class="w-10 h-10 rounded-xl bg-emerald-100 dark:bg-emerald-900/30 flex items-center justify-center">
            <svg class="w-5 h-5 text-emerald-600 dark:text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </span>
          {t.sections.career}
        </h2>
        <div class="space-y-4">
          {cv.career.map((item) => (
            <div class="relative pl-6 pb-6 border-l-2 border-slate-200 dark:border-slate-700 last:pb-0">
              <div class="absolute left-0 top-1 w-4 h-4 -translate-x-[9px] rounded-full bg-emerald-500 ring-4 ring-white dark:ring-slate-900"></div>
              <div class="flex flex-col sm:flex-row sm:items-baseline sm:gap-3 mb-2">
                <span class="text-sm font-semibold text-emerald-600 dark:text-emerald-400">{item.date}</span>
                <span class="font-medium text-slate-900 dark:text-white">{item.position[lang]}</span>
              </div>
              <p class="text-slate-600 dark:text-slate-400">{item.description[lang]}</p>
            </div>
          ))}
        </div>
      </section>
    </div>
  </div>
</BaseLayout>
