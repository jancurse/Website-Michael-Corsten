---
import labels from '../content/labels.json';
import { url } from '../utils/paths';

interface Props {
  lang: 'de' | 'en';
}

const { lang } = Astro.props;
const currentLocale = Astro.currentLocale as 'de' | 'en';
const t = labels[currentLocale];
const otherLang = currentLocale === 'de' ? 'en' : 'de';

// Get current path and compute the equivalent in other language
const currentPath = Astro.url.pathname;

// Localized route slugs (same for both languages with our setup)
const routeSlugs = {
  research: 'forschung',
  publications: 'publikationen',
  cv: 'lebenslauf',
  contact: 'kontakt'
};

// Compute other language URL
function getOtherLangUrl(path: string): string {
  // Replace lang prefix (e.g., /Website-Michael-Corsten/de/ or /Website-Michael-Corsten/en/)
  // First strip base path if present
  const withoutBase = path.replace(/^\/Website-Michael-Corsten/, '');
  // Then replace lang prefix
  const newPath = withoutBase.replace(/^\/(de|en)/, `/${otherLang}`);
  return url(newPath);
}

const otherLangUrl = getOtherLangUrl(currentPath);

const navItems = [
  { href: url(`/${currentLocale}`), label: t.nav.home },
  { href: url(`/${currentLocale}/${routeSlugs.research}`), label: t.nav.research },
  { href: url(`/${currentLocale}/${routeSlugs.publications}`), label: t.nav.publications },
  { href: url(`/${currentLocale}/${routeSlugs.cv}`), label: t.nav.cv },
  { href: url(`/${currentLocale}/${routeSlugs.contact}`), label: t.nav.contact },
];

// Check if current path matches nav item (for active state)
function isActive(href: string): boolean {
  // Normalize paths
  const normalizedHref = href.replace(/\/$/, '');
  const normalizedPath = currentPath.replace(/\/$/, '');
  return normalizedPath === normalizedHref;
}
---

<header class="sticky top-0 z-50 bg-white/80 dark:bg-slate-900/80 backdrop-blur-lg border-b border-slate-200 dark:border-slate-800">
  <div class="max-w-6xl mx-auto px-6">
    <nav class="flex items-center justify-between h-16">
      <!-- Logo / Name -->
      <a href={url(`/${currentLocale}`)} class="text-lg font-semibold text-slate-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
        Prof. Dr. M. Corsten
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-1">
        {navItems.map((item) => (
          <a
            href={item.href}
            class:list={[
              'px-4 py-2 rounded-lg text-sm font-medium transition-colors',
              isActive(item.href)
                ? 'bg-slate-100 dark:bg-slate-800 text-slate-900 dark:text-white'
                : 'text-slate-600 dark:text-slate-400 hover:text-slate-900 dark:hover:text-white hover:bg-slate-50 dark:hover:bg-slate-800/50'
            ]}
          >
            {item.label}
          </a>
        ))}
      </div>

      <!-- Right side: Lang + Theme toggle -->
      <div class="flex items-center gap-2">
        <!-- Language Switcher -->
        <a
          href={otherLangUrl}
          class="flex items-center gap-1.5 px-3 py-2 rounded-lg text-sm font-medium text-slate-600 dark:text-slate-400 hover:text-slate-900 dark:hover:text-white hover:bg-slate-50 dark:hover:bg-slate-800/50 transition-colors"
          title={otherLang === 'en' ? 'Switch to English' : 'Auf Deutsch wechseln'}
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
          </svg>
          <span class="uppercase">{otherLang}</span>
        </a>

        <!-- Theme Toggle -->
        <button
          id="theme-toggle"
          class="p-2 rounded-lg text-slate-600 dark:text-slate-400 hover:text-slate-900 dark:hover:text-white hover:bg-slate-50 dark:hover:bg-slate-800/50 transition-colors"
          title="Toggle theme"
        >
          <!-- Sun icon (shown in dark mode) -->
          <svg class="w-5 h-5 hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
          <!-- Moon icon (shown in light mode) -->
          <svg class="w-5 h-5 block dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
          </svg>
        </button>

        <!-- Mobile menu button -->
        <button
          id="mobile-menu-button"
          class="md:hidden p-2 rounded-lg text-slate-600 dark:text-slate-400 hover:text-slate-900 dark:hover:text-white hover:bg-slate-50 dark:hover:bg-slate-800/50 transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            <path id="close-icon" class="hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </nav>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col gap-1 pt-2">
        {navItems.map((item) => (
          <a
            href={item.href}
            class:list={[
              'px-4 py-3 rounded-lg text-sm font-medium transition-colors',
              isActive(item.href)
                ? 'bg-slate-100 dark:bg-slate-800 text-slate-900 dark:text-white'
                : 'text-slate-600 dark:text-slate-400 hover:text-slate-900 dark:hover:text-white hover:bg-slate-50 dark:hover:bg-slate-800/50'
            ]}
          >
            {item.label}
          </a>
        ))}
      </div>
    </div>
  </div>
</header>

<script>
  // Theme toggle
  const themeToggle = document.getElementById('theme-toggle');

  themeToggle?.addEventListener('click', () => {
    const isDark = document.documentElement.classList.toggle('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
  });

  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');

  mobileMenuButton?.addEventListener('click', () => {
    const isOpen = mobileMenu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden', !isOpen);
    closeIcon?.classList.toggle('hidden', isOpen);
  });
</script>
