---
interface Props {
  status: string;
  variant?: 'default' | 'compact';
}

const { status, variant = 'default' } = Astro.props;

const padding = variant === 'compact' ? 'px-2 py-1 text-xs' : 'px-2.5 py-1 text-sm';
const base = 'inline-flex items-center rounded-md font-medium';

const colors = status === 'laufend'
  ? 'bg-emerald-50 dark:bg-emerald-900/20 text-emerald-700 dark:text-emerald-400'
  : status === 'in Vorbereitung'
  ? 'bg-amber-50 dark:bg-amber-900/20 text-amber-700 dark:text-amber-400'
  : 'bg-slate-100 dark:bg-slate-700/30 text-slate-700 dark:text-slate-400';
---

<span class={`${base} ${colors} ${padding}`}>
  {status}
</span>
