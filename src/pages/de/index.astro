---
import BaseLayout from '../../layouts/BaseLayout.astro';
import contact from '../../content/kontakt.json';
import labels from '../../content/labels.json';

const lang = Astro.currentLocale as 'de' | 'en';
const t = labels[lang];

// Localized route slugs (using German slugs for all with i18n routing)
const routeSlugs = {
  de: { research: 'forschung', publications: 'publikationen', cv: 'lebenslauf', contact: 'kontakt' },
  en: { research: 'forschung', publications: 'publikationen', cv: 'lebenslauf', contact: 'kontakt' }
};

const navCards = [
  {
    title: t.nav.research,
    description: t.index.researchDescription,
    href: `/${lang}/${routeSlugs[lang].research}`,
    icon: 'research',
  },
  {
    title: t.nav.publications,
    description: t.index.publicationsDescription,
    href: `/${lang}/${routeSlugs[lang].publications}`,
    icon: 'publications',
  },
  {
    title: t.nav.cv,
    description: t.index.cvDescription,
    href: `/${lang}/${routeSlugs[lang].cv}`,
    icon: 'cv',
  },
  {
    title: t.nav.contact,
    description: t.index.contactDescription,
    href: `/${lang}/${routeSlugs[lang].contact}`,
    icon: 'contact',
  },
];
---

<BaseLayout title={`Prof. Dr. Michael Corsten - ${t.labels.university}`} lang={lang}>
  <!-- Hero Section -->
  <section class="relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-slate-50 to-slate-100 dark:from-slate-900 dark:to-slate-800"></div>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_20%,rgba(59,130,246,0.05),transparent_50%)]"></div>

    <div class="relative max-w-6xl mx-auto px-6 py-20 md:py-32">
      <div class="flex flex-col md:flex-row items-center gap-12">
        <!-- Profile Image -->
        <div class="flex-shrink-0">
          <div class="w-40 h-40 md:w-48 md:h-48 rounded-full bg-gradient-to-br from-slate-200 to-slate-300 dark:from-slate-700 dark:to-slate-600 flex items-center justify-center shadow-2xl ring-4 ring-white dark:ring-slate-800 overflow-hidden">
            <img src="/images/profile.png" alt={contact.name} class="w-full h-full object-cover">
          </div>
        </div>

        <!-- Profile Info -->
        <div class="text-center md:text-left">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-semibold text-slate-900 dark:text-white tracking-tight">
            {contact.name}
          </h1>
          <p class="mt-4 text-xl md:text-2xl text-slate-600 dark:text-slate-300">
            {contact.title[lang]}
          </p>
          <p class="mt-2 text-lg text-slate-500 dark:text-slate-400">
            {contact.institution[lang]}
          </p>
          <p class="text-lg text-slate-500 dark:text-slate-400">
            {contact.university[lang]}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Navigation Cards -->
  <section class="max-w-6xl mx-auto px-6 py-16 md:py-24">
    <div class="grid sm:grid-cols-2 gap-6">
      {navCards.map((card) => (
        <a
          href={card.href}
          class="group relative bg-white dark:bg-slate-800 rounded-2xl p-8 shadow-sm border border-slate-200 dark:border-slate-700 hover:shadow-lg hover:border-slate-300 dark:hover:border-slate-600 transition-all duration-300"
        >
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-slate-100 dark:bg-slate-700 flex items-center justify-center group-hover:bg-blue-50 dark:group-hover:bg-blue-900/30 transition-colors">
              {card.icon === 'research' && (
                <svg class="w-6 h-6 text-slate-600 dark:text-slate-300 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                </svg>
              )}
              {card.icon === 'publications' && (
                <svg class="w-6 h-6 text-slate-600 dark:text-slate-300 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
              )}
              {card.icon === 'cv' && (
                <svg class="w-6 h-6 text-slate-600 dark:text-slate-300 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              )}
              {card.icon === 'contact' && (
                <svg class="w-6 h-6 text-slate-600 dark:text-slate-300 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              )}
            </div>
            <div class="flex-1 min-w-0">
              <h2 class="text-xl font-semibold text-slate-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                {card.title}
              </h2>
              <p class="mt-2 text-slate-600 dark:text-slate-400">
                {card.description}
              </p>
            </div>
            <svg class="w-5 h-5 text-slate-400 group-hover:text-blue-600 dark:group-hover:text-blue-400 group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </div>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
