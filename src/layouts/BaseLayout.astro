---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  lang?: 'de' | 'en';
}

const { title, lang = 'de' } = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Prof. Dr. Michael Corsten - Gesch채ftsf체hrender Leiter, Institut f체r Sozialwissenschaften, Universit채t Hildesheim" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Playfair+Display:wght@400;500;600&display=swap" rel="stylesheet">
    <title>{title}</title>
    <style>
      body {
        font-family: 'Inter', system-ui, sans-serif;
      }
      h1, h2, h3, h4, h5, h6, .font-serif {
        font-family: 'Playfair Display', Georgia, serif;
      }
    </style>
  </head>
  <body class="min-h-screen flex flex-col">
    <Header lang={lang} />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer lang={lang} />
  </body>
</html>
